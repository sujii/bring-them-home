{
  "extends": "./packages/app/tsconfig.node.json",
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "DOM"],
    "resolveJsonModule": true,
    "composite": true,
    "types": ["node"],
    "noEmit": true
  },
  "include": [
    "**/vue.config.*",
    "**/vite.config.*",
    "**/vitest.config.*",
    "**/*.d.ts",
    "**/*.ext"
  ]
}
